<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.community.create.CommunityCreateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:text="책 모임 개설"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintBottom_toTopOf="@id/updateButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 책 모임 이름 입력 -->
                <TextView
                    android:id="@+id/bookClubNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/rounded_search_view"
                    android:gravity="center_vertical|start"
                    android:paddingStart="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="아무것도 없는 책"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"/>

                <!-- 책 이미지 -->
                <ImageView
                    android:id="@+id/bookImageView"
                    android:layout_width="150dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="Book Cover"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bookClubNameEditText" />

                <LinearLayout
                    android:id="@+id/bookInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/Secondary"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bookImageView">

                    <!-- 책 제목 텍스트 뷰 -->
                    <TextView
                        android:id="@+id/bookTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="아무것도 없는 책" />

                    <!-- 책 저자 텍스트 뷰 -->
                    <TextView
                        android:id="@+id/bookAuthorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/White"
                        android:textSize="12sp"
                        tools:text="레미 쿠르종 글/그림" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bookInfoLayout">

                    <!-- 내용 입력 -->
                    <EditText
                        android:id="@+id/descriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="start"
                        android:background="@drawable/round_edit"
                        android:hint=" 내용을 입력하세요 (300자 이내)"
                        android:inputType="text"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp"
                        android:textSize="14sp" />

                    <!-- 태그 입력 -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="11dp"
                        android:text="# 태그"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tagsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp"
                        android:hint="#태그 #태그와 같이 입력하세요."
                        android:background="@drawable/round_edit"
                        android:inputType="text" />

                    <!-- 참여 인원 입력 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="23dp"
                        android:text="참여 인원"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/participantsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp"
                        android:background="@drawable/round_edit"
                        android:hint=" 최소 4명, 최대 10명과 같이 읽을 수 있어요."
                        android:inputType="number" />

                    <!-- 만날 장소 타이틀 -->
                    <TextView
                        android:id="@+id/meet_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="36dp"
                        android:text="만남 장소"
                        android:textColor="@color/Black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- 만날 장소 섹션 -->
                    <GridLayout
                        android:id="@+id/grid_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:columnCount="4"
                        android:padding="10dp">

                        <!-- 서울 -->
                        <TextView
                            android:id="@+id/place_seoul"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="서울"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 부산 -->
                        <TextView
                            android:id="@+id/place_busan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="부산"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 대구 -->
                        <TextView
                            android:id="@+id/place_daegu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="대구"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 인천 -->
                        <TextView
                            android:id="@+id/place_incheon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="인천"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 광주 -->
                        <TextView
                            android:id="@+id/place_gwangju"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="광주"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 대전 -->
                        <TextView
                            android:id="@+id/place_daejeon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="대전"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 울산 -->
                        <TextView
                            android:id="@+id/place_ulsan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="울산"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 세종 -->
                        <TextView
                            android:id="@+id/place_sejong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="세종"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 경기 -->
                        <TextView
                            android:id="@+id/place_gyeonggi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="경기"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 강원 -->
                        <TextView
                            android:id="@+id/place_gangwon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="강원"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 충북 -->
                        <TextView
                            android:id="@+id/place_chungbuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="충북"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 충남 -->
                        <TextView
                            android:id="@+id/place_chungnam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="충남"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 전북 -->
                        <TextView
                            android:id="@+id/place_jeonbuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="전북"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 전남 -->
                        <TextView
                            android:id="@+id/place_jeonnam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="전남"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 경북 -->
                        <TextView
                            android:id="@+id/place_gyeongbuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="경북"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 경남 -->
                        <TextView
                            android:id="@+id/place_gyeongnam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="경남"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- 제주 -->
                        <TextView
                            android:id="@+id/place_jeju"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/place_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="제주"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </GridLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <!-- 생성하기 버튼 -->
        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="22dp"
            android:backgroundTint="@color/Light_Gray"
            android:text="생성하기"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
